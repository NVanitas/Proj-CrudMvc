@model WebCrudMvc.Models.Produto

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluindo:   @Html.DisplayFor(model => model.Nome) </h1>

<h3>Você quer mesmo excluir este produto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
